{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "flux": {
    "managerFilePatterns": [
      "/(?:^|/)gotk-components\\.ya?ml$/"
    ]
  },
  "enabledManagers": [
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^apps/base/.+\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\\s*\"?(?<depName>[\\w\\-/\\.]+)(?::(?<currentValue>[\\w\\.-]+))?\"?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "lscr.io"
    }
  ]
}
